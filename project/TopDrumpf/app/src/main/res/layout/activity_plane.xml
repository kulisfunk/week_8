<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goober.topdrumpfs.PlaneActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="61dp"
        android:layout_height="63dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="nickname"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="13dp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:text="year"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        android:text="Max Speed (mph)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Range (miles)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Max Height (ft)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Take-off Wt (Kg)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Wing Span (m)"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Firepower"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="194dp"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"
        tools:text="max speed"
        android:layout_marginEnd="109dp" />

    <TextView
        android:id="@+id/range"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="16dp"
        android:text="2"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        tools:text="range"
        android:layout_marginEnd="109dp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="15dp"
        android:text="3"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/range"
        tools:text="height"
        android:layout_marginEnd="109dp" />

    <TextView
        android:id="@+id/max_takeoff"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="17dp"
        android:text="4"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height"
        tools:text="takeoff"
        android:layout_marginEnd="109dp" />

    <TextView
        android:id="@+id/wing"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="15dp"
        android:text="5"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/max_takeoff"
        tools:text="wing"
        android:layout_marginEnd="109dp" />

    <TextView
        android:id="@+id/firepower"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="109dp"
        android:layout_marginTop="16dp"
        android:text="6"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wing"
        tools:text="firepower"
        android:layout_marginEnd="109dp" />

    <ImageView
        android:id="@+id/plane_image"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/screen_background_light" />

    <ImageView
        android:id="@+id/flag_image"
        android:layout_width="38dp"
        android:layout_height="41dp"
        app:srcCompat="@android:drawable/screen_background_light"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="@+id/nickname"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.578"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
